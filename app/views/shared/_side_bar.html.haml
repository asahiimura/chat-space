.side
  .side__header
    .side__header__box
      %p.side__header__box__user-name 
      = current_user.name
      %ul.icn
        %li.icn__list-1
          = link_to new_group_path do
            %i.fa.fa-edit
         
          
        %li.icn__list-2   
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
          
  .side__groups
    - current_user.groups.each do |group|
      .side__groups__group
        = link_to group_messages_path(group) do
          .side__groups__group__name 
            = group.name
          .side__groups__group__message 
            = group.show_last_message
     

